<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/blue_200"
    android:padding="24dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obstacle Race"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="40dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_button_slow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Mode - Slow"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_button_fast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Mode - Fast"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_sensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Mode" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_BTN_highscores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:layout_marginTop="16dp" />
</LinearLayout>
